<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- Declaring the bean which is maintained by the bean container and initializing the values -->

	<bean
		class="com.springcore.constructorinjectionambiguity.NumberMultiply"
		name="numMultiply1" c:num1="10" c:num2="20" />

<!-- Declaring the bean which is managed by the bean container and initializing the values, to avoid ambiguity we have also specified the type of argument -->

<!-- We can also specify the "index" in which the value needs to be initiazlized -->

	<bean
		class="com.springcore.constructorinjectionambiguity.NumberMultiply"
		name="numMultiply2">
		<constructor-arg value="10" type="int" />
		<constructor-arg value="20" type="int" />
	</bean>


</beans>