<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans.xsd">
 
 <!-- Declaring the bean which are to be managed by the bean, initializing the values by setter injection. -->
  
 <bean class="com.springcore.beanlifecycleinterfaces.Employee" name="employee">
 
 	<property name="employeeName">
 		<value>Hemendra Singh Chouhan</value>
 	</property>
 	
 	<property name="employeeCity">
 		<value>Indore</value>
 	</property>
 
 </bean>

</beans>